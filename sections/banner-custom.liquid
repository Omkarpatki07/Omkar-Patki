{% comment %}
  Custom Banner â€” editable texts + animated buttons (no Dawn components)
{% endcomment %}

<section class="figma-banner">
  <div class="figma-banner__inner">
    {% if section.settings.eyebrow != blank %}
      <p class="figma-banner__eyebrow">{{ section.settings.eyebrow }}</p>
    {% endif %}

    {% if section.settings.title != blank %}
      <h1 class="figma-banner__title">{{ section.settings.title }}</h1>
    {% endif %}

    {% if section.settings.subtitle != blank %}
      <p class="figma-banner__subtitle">{{ section.settings.subtitle }}</p>
    {% endif %}

    <div class="figma-banner__ctas">
      {% if section.settings.cta_primary_label != blank %}
        <a
          class="btn btn--primary {% if section.settings.animate_buttons %}btn-animate{% endif %}"
          href="{{ section.settings.cta_primary_link | default: '#' }}"
        >
          {{ section.settings.cta_primary_label }}
        </a>
      {% endif %}
      {% if section.settings.cta_secondary_label != blank %}
        <a
          class="btn btn--secondary {% if section.settings.animate_buttons %}btn-animate{% endif %}"
          href="{{ section.settings.cta_secondary_link | default: '#' }}"
        >
          {{ section.settings.cta_secondary_label }}
        </a>
      {% endif %}
    </div>
  </div>
</section>

<style>
  .figma-banner{padding:clamp(40px,6vw,100px) 20px;text-align:center}
  .figma-banner__eyebrow{letter-spacing:.1em;text-transform:uppercase;margin:0 0 8px}
  .figma-banner__title{font-size:clamp(28px,5vw,56px);line-height:1.05;margin:.2em 0}
  .figma-banner__subtitle{max-width:720px;margin:12px auto 24px;opacity:.85}
  .figma-banner__ctas{display:flex;gap:12px;justify-content:center;flex-wrap:wrap}
  .btn{display:inline-block;padding:12px 20px;border-radius:999px;border:1px solid currentColor;text-decoration:none}
  .btn--primary{background:var(--color-primary, #111);color:#fff}
  .btn--secondary{background:transparent;color:var(--color-primary, #111)}
  /* simple micro-animation */
  .btn-animate{position:relative;transition:transform .15s ease}
  .btn-animate:hover{transform:translateY(-2px)}
  .btn-animate:active{transform:translateY(0)}
</style>

{% schema %}
{
  "name": "Custom Banner",
  "settings": [
    { "type": "text", "id": "eyebrow", "label": "Eyebrow" },
    { "type": "text", "id": "title", "label": "Title" },
    { "type": "textarea", "id": "subtitle", "label": "Subtitle" },

    { "type": "text", "id": "cta_primary_label", "label": "Primary button label" },
    { "type": "url",  "id": "cta_primary_link",  "label": "Primary button link" },

    { "type": "text", "id": "cta_secondary_label", "label": "Secondary button label" },
    { "type": "url",  "id": "cta_secondary_link",  "label": "Secondary button link" },

    { "type": "checkbox", "id": "animate_buttons", "label": "Animate buttons", "default": true }
  ],
  "presets": [{ "name": "Custom Banner" }]
}
{% endschema %}
